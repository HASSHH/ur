extends layout

block content
    link(rel='stylesheet', href='/stylesheets/ur.css')
    h2(id='game-id')
    div(class='swap-div', id='board-container', style='display: block; text-align: left;')
        div(id='top-board-display')
        div(id='board')
            div
              div(class='cell')
                div(class='cell-click-zone', id='cell-4-black')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-3-black')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-2-black')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-1-black')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-0-black')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-15-black')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-14-black')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-13-black')
                  div(class='cell-piece')
            div
              div(class='cell')
                div(class='cell-click-zone', id='cell-5-neutral')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-6-neutral')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-7-neutral')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-8-neutral')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-9-neutral')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-10-neutral')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-11-neutral')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-12-neutral')
                  div(class='cell-piece')
            div
              div(class='cell')
                div(class='cell-click-zone', id='cell-4-white')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-3-white')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-2-white')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-1-white')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-0-white')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-15-white')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-14-white')
                  div(class='cell-piece')
              div(class='cell')
                div(class='cell-click-zone', id='cell-13-white')
                  div(class='cell-piece')
        h3(id='dice-value')

    img(class='hidden-elm', src='/images/red_hl.png', alt='red_hl')
    img(class='hidden-elm', src='/images/green_hl.png', alt='green_hl')
    img(class='hidden-elm', src='/images/green_target.png', alt='green_target')
    img(class='hidden-elm', src='/images/loading.gif', alt='loading_gif')
    script(type='text/javascript', src='/javascripts/ur_spectate.js')
    script.
      startSpectating('#{id}');
